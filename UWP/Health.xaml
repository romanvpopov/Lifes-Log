<Page xmlns:my="using:Microsoft.Toolkit.Uwp.UI.Controls" 
    x:Class="LL.Health"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    <RelativePanel>
        <StackPanel x:Name="TH"
                    Orientation="Horizontal"
                    Margin="4" CornerRadius="2"
                    Background="{ThemeResource AppBarBackgroundThemeBrush}"
                    RelativePanel.AlignTopWithPanel="True"
                    RelativePanel.AlignLeftWithPanel="True"
                    RelativePanel.AlignRightWithPanel="True">
            <FontIcon Glyph="&#xE805;" FontSize="16"/>
            <TextBlock x:Uid="Hlth"
                       Margin="10,0,0,0" FontSize="16"/>
        </StackPanel>
        <my:DataGrid x:Name="MG" 
                     RelativePanel.AlignBottomWithPanel="True"
                     RelativePanel.AlignLeftWithPanel="True"
                     RelativePanel.AlignRightWithPanel="True"
                     RelativePanel.Below="TH"
                     Margin="4"/>
    </RelativePanel>
</Page>
