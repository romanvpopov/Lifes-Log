<local:EventBody
    x:Class="Lifes_log.LLEvents.UBPM"
    xmlns:local="using:Lifes_log.LLEvents"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400"
    Grid.Row="1" Grid.ColumnSpan="4" Width="400">
    <StackPanel Orientation="Horizontal">
        <TextBlock x:Name="MST"
                   VerticalAlignment="Center"/>
        <NumberBox x:Name="MS"
                   KeyDown="MS_OnKeyDown"/>
        <TextBlock x:Name="MDT"
                   VerticalAlignment="Center"/>
        <NumberBox x:Name="MD"
                   KeyDown="MD_OnKeyDown"/>
        <TextBlock x:Name="MPT"
                   VerticalAlignment="Center" />
        <NumberBox x:Name="MP"
                   KeyDown="MP_OnKeyDown"/>
    </StackPanel>
</local:EventBody>
