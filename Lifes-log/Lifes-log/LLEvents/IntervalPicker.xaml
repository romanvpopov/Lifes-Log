<?xml version="1.0" encoding="utf-8"?>
<UserControl
    x:Class="Lifes_log.LLEvents.IntervalPicker"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Grid.Row="0" Grid.Column="5">
    <StackPanel Orientation="Horizontal">
        <NumberBox x:Name="VHour" Width="30"
                   ValueChanged="V_ValueChanged"
                   KeyDown="VHour_KeyDown"/>
        <TextBlock x:Name="THour" x:Uid="Hour"
                   VerticalAlignment="Center"/>
        <NumberBox x:Name="VMinute" Width="30"
                   ValueChanged="V_ValueChanged"
                   KeyDown="VMinute_KeyDown"/>
        <TextBlock x:Name="TMinute" x:Uid="Minute"
                   VerticalAlignment="Center"/>
        <NumberBox x:Name="VSecond"  Width="30"
                   ValueChanged="V_ValueChanged"
                   KeyDown="VSecond_KeyDown"/>
        <TextBlock x:Name="TSecond" x:Uid="Second"
                   VerticalAlignment="Center"/>

    </StackPanel>
</UserControl>
