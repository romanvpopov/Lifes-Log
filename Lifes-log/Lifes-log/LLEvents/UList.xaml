<local:EventBody
    x:Class="Lifes_log.LLEvents.UList"
    xmlns:local="using:Lifes_log.LLEvents"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Grid.Row="1" Grid.ColumnSpan="4">
    <Grid KeyDown="Grid_KeyDown">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <ListView x:Name="FieldList"
                  Grid.Row="1" Grid.ColumnSpan="4"
                  Width="400" MaxHeight="500">
            <ListView.ItemTemplate>
                <DataTemplate x:DataType="local:ListBodyField">
                    <ListViewItem KeyDown="ListViewItem_KeyDown">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{x:Bind Path=Name}" Width="300" VerticalAlignment="Center"/>
                            <NumberBox Value="{x:Bind Path=Value, Mode=TwoWay}"
                                       NumberFormatter="{x:Bind Path=dcF, Mode=OneWay}"
                                       SmallChange="0" LargeChange="0"
                                       KeyDown="Val_OnKeyDown" />
                        </StackPanel>
                    </ListViewItem>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</local:EventBody>
