<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="Lifes_log.LlEvent"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    <SplitView x:Name="RightPane"
               PanePlacement="Right"
               OpenPaneLength="160"
               DisplayMode="Inline"
               IsPaneOpen="True">
        <SplitView.Pane>
            <RelativePanel>
                <ToggleSwitch x:Name="FixPane"
                              x:Uid="Fix" Margin="4"
                              Toggled="FixPane_Toggled"/>
                <UserControl x:Name="RPane"
                             RelativePanel.Below="FixPane"
                             RelativePanel.AlignBottomWithPanel="True"/>
            </RelativePanel>
        </SplitView.Pane>
        <RelativePanel>
            <CommandBar x:Name="Cb" Margin="4"
                        CornerRadius="2"
                        DefaultLabelPosition="Right"
                        RelativePanel.AlignLeftWithPanel="True"
                        RelativePanel.AlignRightWithPanel="True">
                <CommandBar.Content>
                    <StackPanel Margin="6"
                        Orientation="Horizontal">
                        <FontIcon Glyph="&#xADF;" FontSize="16"/>
                        <TextBlock x:Uid="AllEvents" FontSize="16"/>
                    </StackPanel>
                </CommandBar.Content>
                <AppBarButton x:Uid="NewEventC" Icon="Add" Click="BTNewEvent_Click"/>
                <AppBarButton x:Uid="MoveToC" Icon="Go" Click="BTMove_Click"/>
                <AppBarButton x:Uid="FilterC" Icon="Filter" Click="BTFilter_Click"/>
            </CommandBar>
            <ListView x:Name="El" 
                      Loaded="EL_Loaded"
                      RelativePanel.Below="Cb"
                      RelativePanel.AlignBottomWithPanel="True"/>
        </RelativePanel>
    </SplitView>
</Page>
